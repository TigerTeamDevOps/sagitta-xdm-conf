#!/bin/sh


if [ "$1" != upgrade ]; then
    dpkg-divert --add --package sagitta-xdm-conf --rename --divert /etc/X11/xdm/Xsetup.distrib /etc/X11/xdm/Xsetup
    dpkg-divert --add --package sagitta-xdm-conf --rename --divert /etc/X11/xdm/Xresources.distrib /etc/X11/xdm/Xresources
else
    dpkg-divert --rename --remove /etc/init.d/xdm
fi

exit 0
